<!-- /templates/customers/account.liquid -->
{% comment %}

  For all available customer liquid tags:
    - http://docs.shopify.com/themes/liquid-variables/customer

{% endcomment %}

{% paginate customer.orders by 20 %}
<div class="sf_login_new">
    <header class="section-header">
   <h1>{{ 'customer.account.title' | t }}</h1>
	</header>  
    </div>

<!-- header class="section-header text-center">
  <h1>{{ 'customer.account.title' | t }}</h1>
  {{ 'layout.customer.log_out'| t | customer_logout_link }}
  <hr class="hr--small">
</header -->

<div class="grid">

  <div class="grid__item two-thirds medium-down--one-whole  grid_added_data">
    <h2 class="h3">{{ 'customer.orders.title' | t }}</h2>

    {% comment %}
      If we have past orders, loop through each one
    {% endcomment %}
    {% if customer.orders.size != 0 %}

      <div class="table-wrap">
        <table class="full table--responsive">
          <thead>
            <tr>
              <th>{{ 'customer.orders.order_number' | t }}</th>
              <th>{{ 'customer.orders.date' | t }}</th>
              <th>{{ 'customer.orders.payment_status' | t }}</th>
              <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
              <th>{{ 'customer.orders.total' | t }}</th>
            </tr>
          </thead>
          <tbody>
            {% for order in customer.orders %}
              <tr class="table__section">
                <td data-label="{{ 'customer.orders.order_number' | t }}">{{ order.name | link_to: order.customer_url }}</td>
                <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'month_day_year' }}</td>
                <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <hr class="hr--clear">

    {% else %}

      <p>{{ 'customer.orders.none' | t }}</p>

    {% endif %}
  </div>

  <div class="grid__item one-third medium-down--one-whole grid_added_data1">
    <h3>{{ 'customer.account.details' | t }}</h3>

    <p class="h5">{{ customer.name }}</p>
<!-- Begin ReCharge code -->
<p id="rc_link_container">
    <a href="/tools/recurring/login">Manage Subscriptions</a>
</p>
<!-- End ReCharge code -->


    {{ customer.default_address | format_address }}

    <p><a href="/account/addresses" class="text-link">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a></p>
       {% if customer %}
   <p class="logout_Btn">{{ 'layout.customer.log_out'| t | customer_logout_link }}</p>
    {% endif %}
  </div>
</div>
{% if paginate.pages > 1 %}
  {% include 'pagination' %}
{% endif %}
{% endpaginate %}
<div id="stamped-rewards-widget" data-widget-type="rewards-summary" ></div>
<style>
.sf_login_new { background: #f6f6f6; padding: 40px 0 10px 0; text-align: center; margin-bottom: 60px; }
.sf_login_new h1 { color: #ed1b3c; font-size: 62.5px; font-weight: 900; font-family: gentona; text-transform: uppercase; }
div#stamped-rewards-widget a {
    text-decoration: none;
}
a.stamped-rewards-widget-btn-redeem {
    color: #fff;
    background: #e4002b;
}
a.stamped-rewards-widget-btn-rewards-history {
    border-color: #00b6bd !important;
    color: #00b6bd !important;
}

a.stamped-rewards-widget-btn-redeem:hover {
    background: #00b6bd;
border-color: #00b6bd !important;
}
a.stamped-rewards-widget-btn-rewards-history:hover {
    border-color: #00b6bd !important;background: #00b6bd;
    color: #fff !important;
}

  
@media screen and (min-width : 100px) and (max-width : 667px){
div#shopify-section-footer .white_space{display:none;}
.sf_login_new {padding-top: 10px;}
	}
</style>

<!-- LOGOUT REDIRECT -->
  <script>
  jQuery(document).ready( function() {
  jQuery('.logout_Btn a').on("click", function() {
    jQuery.ajax( jQuery(this).attr('href') )
      .done(function() {
       window.location.href = "/account/login?return_url=%2Faccount";
      });
    return false;
  });
});
  </script>
