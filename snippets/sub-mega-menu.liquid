<script type="text/javascript">
$(document).ready(function(){
  $(document).on("click","ul.sf_menu_tabs-list li",function(){
     var tabid = $(this).find("a").attr("tab_id");
     $("ul.sf_menu_tabs-list li,.sf_menu_contant_main .sf_menu_tab").removeClass("sf_menu_active");
     $(this).addClass("sf_menu_active"); 
     $(tabid).addClass("sf_menu_active");
  });
	
    jQuery("ul.nav >li").hover(
      function () {
        jQuery(this).addClass("sf_is_active");
      },
      function () {
        jQuery(this).removeClass("sf_is_active");
      }
    );
});

</script>