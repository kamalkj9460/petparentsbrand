<div class="top-sub-mega-menu" style="">
  <div class="menu-section">
        <div class="sf_pp-12">
           <div class="petMenuContainer_mpet_menues">
            <div class="sf_menu_tabs">  
  <ul class="sf_menu_tabs-list">
    {% for block in section.blocks %} 
      {% if block.type == 'mega_menu' %}            
        <li {% if forloop.first == true %}class="sf_menu_active"{% endif %}>
          <a tab_id="#sf_menu_tab{{ forloop.index }}">
            {{ block.settings.m_menu_title }}
          </a>
        </li>                         
      {% endif %}
    {% endfor %} 
  </ul>
  <div class="sf_menu_contant_main sf_subMenu">
    {% for block in section.blocks %} 
      {% if block.type == 'mega_menu' %}
  		<div id="sf_menu_tab{{forloop.index}}" class="sf_menu_tab {% if forloop.first == true %}sf_menu_active{% endif %}">
          {% assign menuCount = 0 %}
          {% assign menu1 = block.settings.m_menu_link_list_1 %}
          {% assign menu2 = block.settings.m_menu_link_list_2 %}
          {% if menu1 != blank %}
          	{% assign menuCount = menuCount | plus:1 %}
          {% endif %}
          {% if menu2 != blank %}
          	{% assign menuCount = menuCount | plus:1 %}
          {% endif %}
          {% capture menu1 %}
            <ul class="_sf_menu_ _sf_menu_1">
             {% if block.settings.m_c_m != blank  %}
              <li class="menu_title"><span>{{block.settings.m_c_m}}</span></li>
             {% endif %}
             {% for link in linklists[menu1].links %}
             <li><a href="{{ link.url }}">{{ link.title }}</a></li>
             {% endfor %}
            </ul>
          {% endcapture %}
          {% capture menu2 %}
          {% if menu2 != blank %}
          <ul class="_sf_menu _sf_menu_2">
            {% if block.settings.m_c_m2 != blank  %}
            <li class="menu_title"><span>{{block.settings.m_c_m2}}</span></li>
             {% endif %}
            {% for link in linklists[menu2].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
          {% endif %}
          {% endcapture %}
         <div class="sf_menu sf_menu_left menu-{{menuCount}}">
           {{menu1}}{{menu2}}
          </div>
          <div class="lazybg sf_menu sf_menu_right" {% if block.settings.m_menu_bg_img != blank %} data-style="background:url(https://cdn.shopify.com/s/files/1/1355/5443/{{block.settings.m_menu_bg_img}});background-size: cover;background-repeat: no-repeat;background-position:center;"{% endif %}>
            <div class="_sf_left_sf">
              {% if block.settings.m_menu_sec_title != blank %}
              <h3>{{ block.settings.m_menu_sec_title }}</h3>
              {% endif %}
              <div class="sf_lodge">
              {% if block.settings.m_menu_sec_des != blank %}
              <div class="sfDesText">{{ block.settings.m_menu_sec_des }}</div>
              {% endif %}
              {% if block.settings.m_menu_sec_url != blank %}
              <a href="{{ block.settings.m_menu_sec_url }}">Shop</a>
              {% endif %}
              </div>
            </div>
          </div>
  </div>
      {% endif %}
    {% endfor %} 
  </div>
</div>  
          </div>
    </div>
  </div>
</div>

