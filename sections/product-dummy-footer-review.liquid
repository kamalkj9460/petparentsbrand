<div class="__red">
	{% include 'product-footer-snippet' %}
</div>
{% schema %}
  {
    "name": "Dog Diapers footer",
    "settings": [
	  {"type":"checkbox", "id":"is_content", "label":"Enable Product Content","info":"Enable and add content in section blocks bellow!","default":true},
	  {"type":"checkbox", "id":"is_review", "label":"Enable Product Reviews","default":true},
	  {"type":"color","id":"re_head_color","label":"Review Header Color","default":"#11b6bd"},
	  {"type":"text","id":"r_title","label":"Review Titile Text"},
	  {"type":"checkbox","id":"QA_show","label":"Show Question Answers","default":true},
	  {"type":"header","content":"Image Banner Section"},
	  {"type":"image_picker","id":"advBanner","label":"Banner Image [Desktop]"},
	  {"type":"image_picker","id":"advBannermobile","label":"Banner Image [Mobile]"},
	  {"type":"url","id":"advBannerurl","label":"Banner Url"},
	  {"type":"header","content":"Customer Review Section"},
	  {"type":"checkbox", "id":"customReviewCheckboxImg", "label":"Enable Video Content","info":"Enable and add content in section blocks bellow!","default":true},
	  {"type":"text","id":"cusreviewProduct","label":"Review Product"},
	  {"type":"text","id":"cusreviewheadline","label":"Review Title "},
	  {"type":"image_picker","id":"customReviewImg","label":"Review Image"},
	  {"type":"text","id":"customReviewContent","label":"Review Content"},
	  {"type":"header","content":"Customer Review Youtube Section"},
	  {"type":"checkbox", "id":"CustomerReviewVideo", "label":"Enable Video Content","info":"Enable and add content in section blocks bellow!","default":true},
	  {"type":"color","id":"CustomerReviewhead_color","label":"Review Header Color","default":"#00b7bc"},
	  { "type": "video_url", "id": "sec_video", "label": "Video URL", "accept": ["youtube", "vimeo"] }, 
      { "type": "image_picker", "id": "video_poster", "label":"Video Placeholder Image" }, 
	  {"type":"text","id":"cusreviewProductsubHeding","label":"Review Product Sub heading","default":"Great for Housetraining!"}
    ],
	"blocks" : [{
        "type": "content",
        "name": "Content",
		"limit": 5,
        "settings": [
			
			{"type":"text","id":"conetnt_header","label":"Content Header"},
			{"type":"html","id":"conetnt_text","label":"Content Text"}
		]},
		{
			"type":"product-c-review",
			"name":"Product custom Review",
			"limit": 2,
			"settings":[
				  {"type": "text","id":"review_title","label":"Review Title"},
                  {"type":"range","id":"rating","min":1,"max":5,"step":1,"label":"Rating","default":5},
                  {"type": "html","id":"review_c","label":"Review Text"},
                  {"type": "text","id":"reviewer_id","label":"Reviewer Name"}
			   ]
		},
		{
			"type":"faq",
			"name":"faq content",
			"limit": 12,
			"settings":[
				  {"type": "text","id":"faq_title","label":"Faq Heading"},
				  {"type": "html","id":"faq_data","label":"Faq Content"}
			   ]
		}]
  }
{% endschema %}
<!--Stamped - Begin Main Widget -->
<div id="stamped-main-widget"   
data-widget-style="standard" 
data-product-id="625955274804"   
data-name="{{ product.title | escape }}"   
data-url="{{ shop.url }}{{ product.url }}"   
data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" 
data-description="{{ product.description | escape }}"   
data-product-sku="{{product.handle}}"
data-product-type="{{product.type}}">   
{{ product.metafields.stamped.reviews | replace: 'href="//cdn1.stamped.io/files/widget.min.css"' ,'data-href="//cdn1.stamped.io/files/widget.min.css"' }}   
</div>
<!-- Stamped - End Main Widget -->
<script type="text/javascript">
document.addEventListener('DOMContentLoaded', () => {
  /* JS code for inline play */
  let buttons = document.querySelectorAll('.inline_video.img');
  buttons.forEach((button) => {
    button.addEventListener('click', (e) => {
      console.log(e.target);
      let videoId = button.getAttribute('video');
      if (!videoId) return;
      let videoPath = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1&rel=0';
      let ifrm = document.createElement("iframe");
      ifrm.setAttribute('src', videoPath);
      ifrm.setAttribute('allow', 'autoplay')
      ifrm.style.width = '100%';
      ifrm.style.height = '350px';
      ifrm.style.border = 'none';
      button.classList.remove('img');
      button.classList.add('playing');
      button.children[0].innerHTML = '';
      button.children[0].appendChild(ifrm);
    },{once:true});
  });
});
</script>