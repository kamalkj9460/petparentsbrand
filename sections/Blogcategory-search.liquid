
<!-- red box -->
<div class="ban_blog catgeory-blog">
    <div class="blog-search catgeory">
       <p>{{section.settings.redboxText}}</p>
      <form action="/search" data-page-handle="{{template}}" method="get" class="input-group {{ search_bar_location }}" role="search" id="blog_search02">
       {% if template contains 'page.blog' or  template contains 'article' or template contains 'blog'  %}

        <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search" aria-label="{{ 'general.search.placeholder' | t }}">
        <input type="hidden" name="type" value="article" />

       {% else %}

        <input type="search" name="q" value="{{ search.terms | escape }}" aria-label="{{ 'general.search.placeholder' | t }}">
        <input type="hidden" name="type" value="product" />

      {% endif %}
      <button type="submit" class="__search_tab">
           <!-- <span class="icon icon-search test" aria-hidden="true"></span>-->
        <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-search" viewBox="0 0 37 40" style="padding-top: 6px;"><path d="M35.6 36l-9.8-9.8c4.1-5.4 3.6-13.2-1.3-18.1-5.4-5.4-14.2-5.4-19.7 0-5.4 5.4-5.4 14.2 0 19.7 2.6 2.6 6.1 4.1 9.8 4.1 3 0 5.9-1 8.3-2.8l9.8 9.8c.4.4.9.6 1.4.6s1-.2 1.4-.6c.9-.9.9-2.1.1-2.9zm-20.9-8.2c-2.6 0-5.1-1-7-2.9-3.9-3.9-3.9-10.1 0-14C9.6 9 12.2 8 14.7 8s5.1 1 7 2.9c3.9 3.9 3.9 10.1 0 14-1.9 1.9-4.4 2.9-7 2.9z"/></svg>

       </button>
      </form>
     </div>
 

</div>
    
  


{% schema %}
  {
    "name": "Blog search section",
      "settings": [
         {"type":"text","id":"redboxText","label":"Add Text"}
 	],
	"presets":[{
      "name": "Blog landing Page",
      "category": "Pages"
    }]

}
{% endschema %}
