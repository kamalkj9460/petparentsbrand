<section class="websiteBottomAdvertisment">
  <div class="advertismentContent deskTab">
    {% if section.settings.webadvertismentBottom %}
      <a href="{{section.settings.webadverLink}}">
          <img class="lazy2" data-src="{{section.settings.webadvertismentBottom | img_url:'master'}}" />
      </a>
    {% endif %}
  </div>
  <div class="advertismentContent mobBan">
    {% if section.settings.webadvertismentBottom2 %}
      <a href="{{section.settings.webadverLink2}}">
          <img class="lazy2" data-src="{{section.settings.webadvertismentBottom2 | img_url:'master'}}" />
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Web Advertisment Section",
    "settings": [
		{"type":"header","content":"Settings"},
		{"type":"image_picker","id":"webadvertismentBottom","label":"Website Avertisment Banner [Desktop]"},
		{"type":"url","id":"webadverLink","label":"Enter Page Link [Desktop]" },
		{"type":"image_picker","id":"webadvertismentBottom2","label":"Website Avertisment Banner [Mobile]"},
		{"type":"url","id":"webadverLink2","label":"Enter Page Link [Mobile]" }
	],
	"presets": [{
      "name": "Web Advertisment Section ",
      "category": "Image"
    }]
  }
{% endschema %}
