<section class="WarrantyProgram">
  <div class="container">
    <h1><span>{{section.settings.wp_title}}</span></h1>
    <p>{{section.settings.wp_stitle}}</p>
  </div> 
</section>
<section class="Coverage_main">
  <div class="container">
    <h3><span>{{section.settings.cAge_title}}</span></h3>
    <h4>{{section.settings.cAge_Q_1}}</h4>
    <p>{{section.settings.cAge_A_1}}</p>
    <h4>{{section.settings.cAge_Q_2}}</h4>
    <p>{{section.settings.cAge_A_2}}</p>
  </div> 
</section>
<section id="WorksPrograms">
    <div class="container">
        <div class="WorksPrograms">
            <div class="workprogram wprograms_left">
              <h3>{{section.settings.wks_title}}</h3>
              <h4>{{section.settings.wks_Q_1}}</h4>
               <div class="fContent">
                    {{section.settings.wks_A_1}}
                </div>               
            </div>
            <div class="workprogram wprograms_right">
                <h3>{{section.settings.pgs_title}}</h3>
              	<h4>{{section.settings.pgs_Q_1}}</h4>
              	 <div class="fContent">
                    {{section.settings.pgs_A_1}}
                </div> 
            </div>
        </div>
  	</div>
</section>
{% schema %}
  {
    "name": "Page Setting",
    "settings": [ 
		 {"type":"header", "content":"Warranty Program"},
        {"type":"text","id":"wp_title","label":"Heading"},
        {"type":"html","id":"wp_stitle","label":"Sub Heading"},
        {"type":"header", "content":"Coverage"},
        {"type":"text","id":"cAge_title","label":"Heading"},
        {"type":"text","id":"cAge_Q_1","label":"Question (1)"},
        {"type":"html","id":"cAge_A_1","label":"Answer (1)"},
        {"type":"text","id":"cAge_Q_2","label":"Question (2)"},
        {"type":"html","id":"cAge_A_2","label":"Answer (2)"},
        {"type":"header", "content":"Works"},
        {"type":"text","id":"wks_title","label":"Heading"},
        {"type":"text","id":"wks_Q_1","label":"Title"},
        {"type":"html","id":"wks_A_1","label":"Content"},
        {"type":"header", "content":"Programs"},
        {"type":"text","id":"pgs_title","label":"Heading"},
        {"type":"text","id":"pgs_Q_1","label":"Title"},
        {"type":"html","id":"pgs_A_1","label":"Content"}
	],
	"presets":[{
      "name": "productWarrenty",
      "category": "Pages"
    }]

}
{% endschema %}

<style>
body {font-family: "Gentona book" !important;}
.WarrantyProgram h1 {
    font-size: 40px;
    color: #9d9d9c;
    font-weight: 500;
    line-height: 1.2;
    font-family: "Gentona book" !important;
