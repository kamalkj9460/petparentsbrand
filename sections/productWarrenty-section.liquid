    top: -20px;
    border-radius: 5px;
}  
.Coverage_main h4 {
    font-size: 20px;
    line-height: 1.25;
    color: #9d9d9c;
    text-transform: inherit;
    letter-spacing: 0;
    margin: 0;
      font-weight: 600;
} 
