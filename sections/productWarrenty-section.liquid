    top: -25px;
    border-radius: 5px;
}
.WarrantyProgram p {
    font-size: 20px;
    line-height: 1.2;
    text-align: center;
    color: #9d9d9c;
    padding-bottom: 50px;
} 
.Coverage_main h3 {
    font-size: 28px;
    line-height: 1.2;
    color: #9d9d9c;
