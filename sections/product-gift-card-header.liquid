        <div class="product-single__meta2">            
          <div class="product_code" itemprop="name">
      <div class="title_online_exe_badge dog_diapper"><span class="ex_title">{% if section.settings.product_vendor_enable %}Pet Parents<sup>Â®</sup>{% endif %} {{ section.settings.custom_title | default:product.title }}</span></div>
